# Required: OpenAI API key (needed even when using other providers for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Required: Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Optional: Alternative LLM Provider Keys (choose one)
# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# Optional: OpenAI Configuration
# Custom OpenAI-compatible API endpoint
OPENAI_BASE_URL=

# Optional: Neo4j Advanced Configuration
# Enable parallel runtime (Neo4j Enterprise only)
USE_PARALLEL_RUNTIME=false
